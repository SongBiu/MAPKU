/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

view.body {
	width: 100%;
	display: flex;
	flex-direction: column;
	height: 80%;
	position: relative;
	top:8%;
	overflow-y: scroll;
}
view.dynamic {
	height: 35%;
	width: 100%;
	border-bottom: solid;
	border-color: #BEBEBE;
}
image.left {
	height: 40%;
	display: inline-block;
	width: 20%;
	border-radius: 100%;
	position: relative;
	left: 3%
}
view.topline {
	display: flex;
	flex-direction: row;
	position: fixed;
	top:0;
	width: 100%;
	height: 7%;
	align-items: center;
	background-color: rgba(231, 231, 231, 0.514);
}
view.btn {
	width: 33%;
	height: 100%;
	align-items: center;
	justify-content: center;
	align-content: center;
}
view.btn navigator {
	text-align: center;
	height: 100%;
	display: flex;
	justify-content: center;
	color: #1C1C1C;
}

