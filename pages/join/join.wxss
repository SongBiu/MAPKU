/* pages/join/join.wxss */

.community {
    width: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
}
.container {
	display: block;
}
view.topline {
	display: flex;
	flex-direction: row;
	position: fixed;
	top:0;
	width: 100%;
	height: 7%;
	align-items: center;
	background-color: rgba(231, 231, 231, 0.514);
}
view.btn {
	width: 33%;
	height: 100%;
	align-items: center;
	justify-content: center;
	align-content: center;
}
view.btn navigator {
	text-align: center;
	height: 100%;
	display: flex;
	justify-content: center;
	color: #1C1C1C;
}
view.body {
    position: relative;
    top: 7%;
    width: 100%;
    height: 93%;
}
image.up {
    width: 100%;
}
view.community {
    overflow-y: scroll; 
    height: 80%;
}
view.community-item {
    display: flex;
    width: 100%;
    height: 30%;
    flex-direction: row;
}
view.left {
    width: 70%;
    height: 100%;
}
view.right {
    width: 30%;
    height: 100%;
}
image.btn {
    width: 100%;
    height: 40%;
}
view.name {
    width: 100%;
    height: 25%;
    font-size: 1.5rem;
    font-weight: bold;
}
view.descr {
    width: 100%;
    height: 75%;
    word-wrap: break-word;
    font-size: 0.9rem
}
.right navigator {
    height: 33%;
    width: 100%;
}
navigator image {
    width: 95%;
    height: 100%;
}