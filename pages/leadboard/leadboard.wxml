<view class="container">
	<view class='topline'>
		<view class='btn'>
			<navigator url='../join/join'>加入社团</navigator>
		</view>
		<view class="btn" id="this">
			<navigator url='../leadboard/leadboard'>排行榜</navigator>
		</view>
		<view class='btn'>
			<navigator url='../shop/shop'>社团商城</navigator>
		</view>
	</view>
	<view class="leadboard">
		<view class="thefirst">
			<text class="st">1st</text>
			<view class="info">
				<image src="{{app.url_pre}}/avatar/{{thefirst.usrID}}.jpg" class="firstAvar"></image>
				<text class="name">{{thefirst.name}}</text>
			</view>
			<view class="num">
				<text class="count">{{thefirst.countBag}}</text>
				<text class="bag">袋</text>
			</view>

		</view>
		<view class="other">
			<block wx:for="{{others}}" wx:for-item="usr">
				<view class="usr">
					<view class="st">{{usr.index}}</view>
					<view class="info">
						<image src="{{app.url_pre}}/avatar/{{usr.usrID}}.jpg" class="avar"></image>
						<text class="oname">{{usr.name}}</text>
					</view>
					<view class="countBag">
						<view class="count">{{usr.countBag}}</view>
						<view class="bag">袋</view>
					</view>
				</view>
			</block>
		</view>
	</view>
	<view class='bottom' style="flex-direction:row；">
		<view class='button-bottom'>
			<navigator url='../leadboard/leadboard'>
				<image src='{{app.url_pre}}/icon/Fill-1.png' class='bottom'></image>
				<text class="label">社团</text>
			</navigator>
		</view>
		<view class='button-bottom'>
			<image src='{{app.url_pre}}/icon/Combined Shape.png' class='bottom' bindtap="selectImg">
				<text class="label">上传</text>
			</image>
	</view>
		<view class='button-bottom'>
			<navigator url='../my/my'>
				<image src='{{app.url_pre}}/icon/people.png' class='bottom'></image>
				<text class="label">我的</text>
			</navigator>
		</view>
	</view>
</view>