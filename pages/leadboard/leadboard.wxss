/* pages/leadboard/leadboard.wxss */
page {
	width: 100%;
}
view.topline {
	display: flex;
	flex-direction: row;
	position: fixed;
	top:0;
	width: 100%;
	height: 5%;
	align-items: center;
	text-align: center;
}
view.btn {
	width: 33%;
	height: 100%;
	align-items: center;
	justify-content: center;
	align-content: center;
}
view.btn navigator {
	text-align: center;
	height: 100%;
	display: flex;
	justify-content: center;
	color: #1C1C1C;
}
view.leadboard {
	height: 82%;
	width: 100%;
	position: relative;
	top: 7%;
}
view.thefirst {
	width:100%;
	height: 27%;
	display: flex;
	border-bottom:solid;
	border-color: #BEBEBE;
	border-width: 8px; 
}
view.other {
	width: 100%;
	height: 70%;
	overflow-y: scroll;
}
image.firstAvar {
	border-radius: 100%;
	width: 85%;
  height:0;
}
view.thefirst view.info {
	display: inline-block;
	width: 30%;
	height: 100%;
	text-align: center;
}
text.st {
	height: 100%;
	width: 33%;
	font-size: 1.7rem;
	color: #48D1CC;
	position: relative;
	left: 12%;
	top: 12%;
}
text.count {
	color: #48D1CC;
	font-size: 2.7rem;
}
text.bag {
	color: #BEBEBE;
}
view.num {
	height: 100%;
	width: 40%;
	position: relative;
	top: 10%;
}

view.usr {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 20%;
	border-bottom: solid;
	border-color: #BEBEBE;
	border-width: 0.1px;
}
.usr view.st {
	font-size: 1.2rem;
	width: 20%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.usr view.info {
	width: 60%;
	height: 100%;
	display: flex;
	align-items: center;
}
.usr image {
	border-radius: 100%;
	width: 20%;
  height: 0;
}
.usr text {
  margin-left: 1em;
}
.usr view.countBag {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
view.countBag view.count {
	font-size: 1.6rem
}
view.countBag view.bag {
	color: #BEBEBE;
}
#this {
	color: green;
}