/* pages/my/my.wxss */
view.container {
	justify-content:initial;
}
view.usr {
	width: 100%;
	height: 20%;
	border-bottom: solid;
	border-color: #BEBEBE;
	display: flex;
	flex-direction: row;
	padding-left: 5%;
	padding-top:10%;
}
view.info {
	display: flex;
	flex-direction: column;
	padding-left: 15%;
	align-items: left;
}
view.name {
	font-size: 1.4rem;
}
view.community {
	color: #808080
}
view.count {
	font-size: 1.2rem;
	width: 100%;
	height: 15%;
	display: flex;
	flex-direction: row;
	justify-content: center;
}
view.score {
	display: flex;
	flex-direction: column;
	width: 50%;
	height: 100%;
	border-right: solid;
	border-color: #BEBEBE;
	align-items: center;
	justify-content: center;
}
view.countBag {
	display: flex;
	flex-direction: column;
	width: 50%;
	height: 100%;
	align-items: center;
	justify-content: center;
}
view.scoreNum {
	color: #f5a623;
}
view.bagNum {
	color:#417505;
}
view.function {
	width: 100%;
	height: 60%;
}
image {
	width: 100px;
	height: 100px;
}