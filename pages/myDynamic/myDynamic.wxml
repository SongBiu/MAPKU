<!--pages/myDynamic/myDynamic.wxml-->
<view class='container'>
  <view class='body' id='dynamic-list'>
    <block wx:for="{{dynamics}}" wx:for-item="dyna">
      <view class='dynamic'>
        <image class="left" src="{{app.globalData.userInfo.avatarUrl}}"></image>
        <view class="middle">
          <view class="name">{{dyna.name}}</view>
          <image src="{{app.url_pre}}/{{dyna.image}}" bindtap="preImg" dat-list="{{app.url_pre}}/{{dyna.image}}" data-src="{{app.url_pre}}/{{dyna.image}}"></image>
          <!-- <view class="position">pku</view> -->
        </view>
        <view class="right">
          <view class="time">{{dyna.time}}</view>
          <view class="num">{{dyna.countBag}}袋</view>
          <view class="desc">{{dyna.say}}</view>
          <view class="good"></view>
        </view>
      </view>
    </block>
  </view>
  <view class='bottom' style="flex-direction:row；">
    <view class='button-bottom' bindtap='gotoindex'>
      <image src='{{app.url_pre}}/icon/community1.png' mode="widthFix" class='bottom'></image>
      <text class="label">主页</text>
    </view>
    <view class='button-bottom'>
      <image src='{{app.url_pre}}/icon/Combined Shape.png' mode="widthFix" class='bottom' bindtap="selectImg"></image>
      <text class="label">上传</text>
    </view>
    <view class='button-bottom' bindtap='gotomy'>
      <image src='{{app.url_pre}}/icon/people2.png' mode="widthFix" class='bottom'></image>
      <text class="label">我的</text>
    </view>
  </view>
</view>