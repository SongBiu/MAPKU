<!--pages/signup/signup.wxml-->
<view class='container'>
    <image src='{{app.url_pre}}/icon/copy.png' class="top"></image>
    <form bindsubmit='formSubmit'>
        <input name="name" class='name' placeholder="昵称"></input>
        <input name="email" class='mail' placeholder="联系邮箱"></input>
        <input name="invitateCode" class='invitateCode' placeholder="邀请码（选填）"></input>
        <view class="black"></view>
        <button formType="submit" class="submit">提交</button>
    </form>
</view>